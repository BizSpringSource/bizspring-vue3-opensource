.store-top {
  margin-bottom: 20rpx;
}
.store-top .store-logo {
  width: 160rpx;
  height: 160rpx;
  border: #eeeeee 2rpx solid;
}
.store-top .btn-box {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.store-top .btn-box .iconfont {
  font-size: 24rpx !important;
  margin-right: 10rpx;
}
.coupon {
  overflow: hidden;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon .item {
  border: #ff0000 2rpx solid;
  padding: 6rpx 15rpx;
  border-radius: 10rpx;
  color: #ff0000;
}
.mallbox {
  padding: 20rpx 0;
}
.mallbox .title {
  border-bottom: #eeeeee 2rpx solid;
  line-height: 80rpx;
}
.mallbox .tab {
  font-size: 28rpx;
}
.mallbox .tab .tab-item {
  flex: 1;
  text-align: center;
}
.mallbox .tab .on {
  color: #ff0000;
}
.mallbox .product {
  flex-wrap: wrap;
}
.mallbox .pro-item {
  width: calc(50% - 20rpx);
  border: #eeeeee 2rpx solid;
  border-radius: 10rpx;
  overflow: hidden;
}
.mallbox .pro-item .imgbox {
  width: 100%;
  padding-top: 100%;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}
.mallbox .pro-item .imgbox .img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
}
.mallbox .pro-item .title {
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 23rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-weight: 500;
  border: none;
  line-height: 30rpx;
}
.mallbox .pro-item .coupon {
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 21rpx;
  color: #ff0000;
}
.mallbox .pro-item .info {
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 24rpx;
  color: #ff0000;
}

