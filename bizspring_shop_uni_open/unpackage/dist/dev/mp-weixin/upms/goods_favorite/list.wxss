
.shoucang {
	background: #ffffff;
	box-sizing: border-box;
	width: 100%;
	overflow: hidden;
	margin-bottom: 20rpx;
	display: flex;
	padding: 30rpx;
}
.shoucang .img {
	width: 160rpx;
	height: 160rpx;
	overflow: hidden;
	margin-right: 20rpx;
}
.shoucang .box1 {
	width: calc(100% - 180rpx);
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.shoucang .box1 .tit {
	font-size: 26rpx;
}
.shoucang .box1 .price {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.shoucang .box1 .price .iconfont {
	font-size: 27rpx !important;
}
.shoucang .box1 .date {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.shoucang .box1 .date .iconfont {
	font-size: 30rpx !important;
}

